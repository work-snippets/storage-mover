# Azure Storage connection string
AZURE_CONN=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# AWS credentials (optional - leave blank if using only role assumption)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_SESSION_TOKEN=your-session-token  # Optional, only if using temporary credentials

# AWS IAM Role (required for role assumption)
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/YourRoleName
AWS_REGION=ap-south-1

# File transfer configuration
S3_BUCKET=your-s3-bucket
S3_KEY=your-object-key
AZURE_CONTAINER=your-azure-container
AZURE_BLOB_NAME=your-blob-name